<body class="d-flex align-items-center py-4 bg-body-tertiary">
  <main class="form-signin w-100 m-auto" id="mainLogin">
    <input type="hidden" name="_csrf" id="_csrf" value="{{csrfToken}}">
    <img class="mb-4" style="display: block; margin: 0 auto;"
      src="https://socpr.org.pe/wp-content/uploads/2024/03/favicon.png" width="72" height="72">
    <h1 class="h3 mb-3 fw-normal text-center">Elecciones SOCPR</h1>

    <div class="form-floating">
      <input type="email" class="form-control" id="username" placeholder="user">
      <label for="username">Usuario</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="password" placeholder="Password">
      <label for="password">Contraseña</label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="button" id="btnLogin">Iniciar Sesión</button>
    <p class="mt-5 mb-3 text-body-secondary text-center">&copy; 2024</p>
    <p class="mt-1 mb-3 text-body-secondary text-center">Desarrollado por @EduardoDP</p>
  </main>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/bootstrap.bundle.min.js"> </script>
  <script>
    document.getElementById("btnLogin").addEventListener("click", function (event) {
      InicioSesion();
    });

    $('#username, #password').on('keypress', function (e) {
      if (e.key === "Enter") {
        InicioSesion();
      }
    });

    var isProcessing = false;

    function InicioSesion() {
      if (isProcessing) {
        console.log("Procesando...");
        return;
      }

      var username = $('#username').val().trim();
      var password = $('#password').val().trim();
      var csrfToken = $('#_csrf').val();

      $('#username').removeClass('is-invalid');
      $('#password').removeClass('is-invalid');
      $('.invalid-feedback').remove();
      $(".error-message").remove();

      var valid = true;
      if (username === "") {
        $('#username').addClass('is-invalid');
        $('#username').after('<div class="invalid-feedback">*Campo obligatorio</div>');
        valid = false;
      }
      if (password === "") {
        $('#password').addClass('is-invalid');
        $('#password').after('<div class="invalid-feedback">*Campo obligatorio</div>');
        valid = false;
      }
      if (!valid) {
        return;
      }

      $("#btnLogin").prop('disabled', true);
      isProcessing = true;

      $.ajax({
        url: '/iniciarsesion',
        method: 'POST',
        data: {
          username: username,
          password: password,
          _csrf: csrfToken
        },
        success: function (data) {
          if (data === 'error') {
            Swal.fire({
              title: "Login",
              text: "Usuario y/o contraseña incorrectos",
              icon: "error"
            });
          } else {
            Swal.fire({
              title: "Login",
              text: "Acceso correcto",
              icon: "success",
              showConfirmButton: false,
            });
            window.location.href = '/';
          }
        },
        error: function (error) {
          console.error('Error:', error);
        },
        complete: function () {
          $("#btnLogin").prop('disabled', false);
          isProcessing = false;
        }
      });
    }
  </script>
</body>

